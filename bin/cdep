#!/bin/bash

dep_file="import.dep"
pkgs=()

function load() {
    if [ -f $1 ]; then
        cat $1
    fi
}

function save() {
    rm -f $dep_file

    for line in $@; do
        if [ "$line" != "" ]; then
            echo $line >> $dep_file
        fi
    done
}

function push_pkg() {
    test_pkg $1
    if [ $? != 0 ]; then
        return
    fi

    pkgs+=($1)
}

function test_pkg() {
    for i in ${pkgs[@]}; do
        if [ "$i" == "$1" ]; then
            return 128
        fi
    done

    return 0
}

function list() {
    for line in $(load $dep_file); do
        echo $line
    done
}

function add() {
    if [ "$1" == "" ]; then
        echo "cdep add <pkg> [latest|tag|commit]"
        return
    fi

    cget $1 $2
    local rev=$2
    if [ "$2" == "latest" -o "$2" == "" ]; then
        rev=`cd $CWORK_PATH/src/$1 && git rev-parse HEAD`
    fi

    local data=($(load $dep_file))
    local i=0
    for line in ${data[@]}; do
        local field=(${line//@/ })
        local pkg=${field[0]}

        if [ "$pkg" == "$1" ]; then
            data[$i]="$1@$rev"
            save ${data[@]}
            echo $1 updated at $rev
            return
        fi

        let i++
    done

    save ${data[@]} "$1@$rev"
    echo $1 added at $rev
}

function remove() {
    if [ "$1" == "" ]; then
        echo "cdep remove <pkg>"
        return
    fi

    local data=($(load $dep_file))
    local i=0
    for line in ${data[@]}; do
        local field=(${line//@/ })
        local pkg=${field[0]}

        if [ $pkg == "$1" ]; then
            data[$i]=""
            save ${data[@]}
            echo $1 removed
            return
        fi

        let i++
    done
}

function ensure() {
    local dep=$1/$dep_file
    if [ "$1" != "." ]; then
        dep=$CWORK_PATH/src/$1/$dep_file
    fi

    for line in $(load $dep); do
        local field=(${line//@/ })
        local pkg=${field[0]}
        local rev=${field[1]}

        test_pkg $pkg
        if [ $? != 0 ]; then
            continue
        fi

        cget $pkg $rev
        push_pkg $pkg
        ensure $pkg $rev
    done

    if [ "$1" != "." ]; then
        echo "$1@$2"
    fi
}

if [ "$CWORK_PATH" == "" ]; then
    CWORK_PATH=`echo ~`/cwork
fi

case $1 in
    list)
        $@
    ;;
    add)
        $@
        save $(ensure .)
    ;;
    remove)
        $@
        save $(ensure .)
    ;;
    ensure)
        save $(ensure .)
        list
    ;;
    *)
        echo "Usage: cdep <add|remove|ensure>"
    ;;
esac
